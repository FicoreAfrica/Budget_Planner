# Flask Application Settings
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here  # Generate a secure key (e.g., via Python: secrets.token_hex(32))

# Database Configuration (Render provides DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:port/dbname  # Replace with Render's DATABASE_URL

# Session and Security
SESSION_SECRET_KEY=your-session-secret-key-here  # Generate a secure key for session management
SESSION_TYPE=filesystem  # Or 'redis' if using Render's Redis add-on

# Render-Specific Settings
PORT=10000  # Render default port
HOST=0.0.0.0  # Bind to all interfaces for Render

# Email Configuration (Optional, for send_email features)
EMAIL_SERVER=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email-username
EMAIL_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Application-Specific
DEFAULT_LANGUAGE=en  # Default language for users and emergency fund
